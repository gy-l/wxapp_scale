view,
text {
  box-sizing: border-box;
}

.wrapper {
  position: relative;
}

.scale-mask {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 100;
}

/* .horizontal-box{
  padding-top: 7%;
} */
.horizontal-box .scroll-wrapper {
  position: relative;
  display: flex;
}

.horizontal-box .triangle {
  position: absolute;
  left: 50%;
  top: -18px;
  transform: translate(-50%);
  z-index: 10;
  border-color: #739DEA #fff #fff #fff;
  border-style: solid;
  border-width: 9px 6px 0 6px;
  height: 0;
  width: 0;
}

.horizontal-box .zz {
  position: absolute;
  left: 50%;
  top: 0;
  transform: translate(-50%);
  height: 50%;
  width: 4px;
  border-radius: 4px;
  background-color: #739DEA;
  z-index: 10;
}

/* .scale-container{
  display: flex;
} */
.horizontal-box .scale-wrapper {
  display: flex;
  border-top: 1px solid #C2D7E7;

}

.horizontal-box .scale-grip {
  position: relative;
  height: 100rpx;
  display: flex;
}

.horizontal-box .scale-grip::before {
  content: "";
  position: absolute;
  top: 0;
  border-width: 1px;
  border-color: inherit;
  border-style: solid;
  height: 100%;
  transform: translateX(-50%);
  left: 0rpx;
  border-top: 1px solid #C2D7E7;
}

.horizontal-box .scale-grip:last-child::after {
  content: "";
  position: absolute;
  top: 0;
  right: 0;
  border-width: 1px;
  border-color: inherit;
  border-style: solid;
  height: 100%;
}

.horizontal-box .scale-grip-item {
  height: 60%;
  padding-top: 10rpx;
}

.horizontal-box .scale-grip-item:not(:last-child) {
  border-right: 1px solid #000000;
}

.horizontal-box .scale-vaule-wrapper {
  position: relative;
  display: flex;
  text-align: center;

}

.horizontal-box .scale-vaule {
  padding: 30rpx 0;
  transform: translateX(50%);
}

.horizontal-box .first-scale-value {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 20rpx 0;
  transform: translateX(-50%);
}

.horizontal-box .seat {
  flex-shrink: 0;
  box-sizing: border-box;
}